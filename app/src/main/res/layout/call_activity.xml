<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallActivity">

    <ImageView
        android:id="@+id/contactImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:contentDescription="Contact Image" />

    <TextView
        android:id="@+id/contactNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contactImageView"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingTop="16dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="24dp"
        tools:text="Contact Name" />

    <TextView
        android:id="@+id/callTimerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contactNameTextView"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:paddingTop="8dp"
        android:layout_marginTop="24dp"
        tools:text="Call Timer" />
    <ImageButton
        android:id="@+id/buttonMute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/callTimerTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:src="@mipmap/ic_mic_muted"
        android:contentDescription="mute" />

    <ImageButton
        android:id="@+id/buttonSpeaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/callTimerTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:src="@mipmap/ic_speaker_off"
        android:contentDescription="speaker" />
    <Button
        android:id="@+id/buttonEndCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/callTimerTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="End Call"
        android:textSize="18sp" />

</RelativeLayout>
